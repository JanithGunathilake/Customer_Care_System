<?xml version="1.0" encoding="UTF-8"?>

	<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>Question</servlet-name>
		<servlet-class>servlet.QuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Question</servlet-name>
		<url-pattern>/que</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ManageQuestion</servlet-name>
		<servlet-class>servlet.ManageQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManageQuestion</servlet-name>
		<url-pattern>/manque</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddQuestion</servlet-name>
		<servlet-class>servlet.AddQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddQuestion</servlet-name>
		<url-pattern>/addque</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>InsertQuestion</servlet-name>
		<servlet-class>servlet.InsertQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InsertQuestion</servlet-name>
		<url-pattern>/insertque</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EditQuestion</servlet-name>
		<servlet-class>servlet.UpdateQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EditQuestion</servlet-name>
		<url-pattern>/editque</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteQuestion</servlet-name>
		<servlet-class>servlet.DeleteQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteQuestion</servlet-name>
		<url-pattern>/deleteque</url-pattern>
	</servlet-mapping>
	
	
	
	
	</web-app>